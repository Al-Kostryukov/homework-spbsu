extends ../layout.jade

block content-right
	link(rel="stylesheet", href="/public/css/sign-in-sign-up.css")
	header.page-header
		h1.page-title Восстановление пароля
		h4.page-description Введите Ваш email. На него придет ссылка для восстановления пароля.
	div.content
		div.sign-in-form-container
			form.pure-form.pure-u-1-3
				fieldset.pure-group
					input#name(type='text', placeholder='Email')
				button.pure-controls.pure-button.pure-button-primary(type='button') Отправить
